            </MudTd>
        }
        @if (ShowColumn("Type"))
        {
            <MudTd DataLabel="Type">@d.ClientType?.Name</MudTd>
        }
        @if (ShowColumn("Hostname"))
        {
            <MudTd DataLabel="Hostname">@d.Hostname</MudTd>
        }
        @if (ShowColumn("IP"))
        {
            <MudTd DataLabel="IP">
                @if (TryGetIpDisplay(d, out var ipDisplay, out var ipTooltip))
                {
                    <MudTooltip Text="@ipTooltip">
                        <span>@ipDisplay</span>
                    </MudTooltip>
                }
                else
