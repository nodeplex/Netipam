        }
        @if (ShowColumn("Subnet"))
        {
            <MudTd DataLabel="Subnet">
                @if (d.Subnet is not null)
                {
                    <MudLink Href="@($"/subnets/{d.Subnet.Id}/ips")"
                             Underline="Underline.Always"
                             Style="font-size:inherit; font-weight:600">
                        @d.Subnet.Name
                    </MudLink>
                }
                else
                {
                    <span>-</span>
                }
            </MudTd>
        }
        @if (ShowColumn("MAC"))
        {
            <MudTd DataLabel="MAC">@d.MacAddress</MudTd>
        }

        @{
            var upstreamName = d.HostDevice?.Name ?? d.UpstreamDeviceName;
            var upstreamConn = d.HostDevice is not null ? "Hosted" : d.UpstreamConnection;
            var connDetail = upstreamConn ?? d.ConnectionDetail;
            var upstreamDisplay = BuildUpstreamDisplay(upstreamName, upstreamConn, d.ConnectionDetail);
        }

        @if (ShowColumn("Conn"))
        {
            <MudTd DataLabel="Conn" Align="Align.Center" Style="text-align:center;">
                @if (!string.IsNullOrWhiteSpace(d.ConnectionType))
                {
                    <MudTooltip Text="@GetConnTooltip(d)">
                        <MudIcon Icon="@(IsWifi(d.ConnectionType) ? Icons.Material.Filled.Wifi : Icons.Material.Filled.SettingsEthernet)"
