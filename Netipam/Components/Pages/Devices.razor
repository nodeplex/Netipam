            <MudTd DataLabel="Upstream">
                <MudText Style="font-weight:600; font-size:inherit">@Safe(upstreamDisplay)</MudText>
            </MudTd>
        }

        @if (ShowColumn("Location"))
        {
            <MudTd DataLabel="Location">@((d.LocationRef?.Name ?? d.Location) ?? "")</MudTd>
        }
        @if (ShowColumn("Rack"))
        {
            <MudTd DataLabel="Rack">@FormatRack(d)</MudTd>
        }
        @if (ShowColumn("Asset"))
        {
            <MudTd DataLabel="Asset #">@d.AssetNumber</MudTd>
        }
        @if (ShowColumn("Manufacturer"))
        {
            <MudTd DataLabel="Manufacturer">@d.Manufacturer</MudTd>
        }
        @if (ShowColumn("Model"))
        {
            <MudTd DataLabel="Model">@d.Model</MudTd>
        }
        @if (ShowColumn("OS"))
        {
            <MudTd DataLabel="OS">@d.OperatingSystem</MudTd>
        }
        @if (ShowColumn("Source"))
        {
            <MudTd DataLabel="Source">@d.Source</MudTd>
        }
        @if (ShowColumn("UsedNew"))
        {
            <MudTd DataLabel="Used/New">@d.UsedNew</MudTd>
        }
