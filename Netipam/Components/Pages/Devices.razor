            <MudTh style="width:54px;">Conn</MudTh>
        }
        @if (ShowColumn("Upstream"))
        {
            <MudTh>Upstream</MudTh>
        }
        @if (ShowColumn("Location"))
        {
            <MudTh>Location</MudTh>
        }
